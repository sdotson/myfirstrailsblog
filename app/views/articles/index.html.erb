<p id="notice"><%= notice %></p>

    <% @articles.each do |article| %>
      <article>
        <h2><%= link_to article.title, article %></h2>
        <p><em>Posted <%= article.created_at.time.to_formatted_s(:long) %> by <%= article.user.email %></em></p>
        <p><%= article.body %>
                <%= link_to 'Read More', article %></p>

        <% if current_user == article.user %>
          <p><%= link_to 'Edit', edit_article_path(article) %> |
          <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <% end %>
      </article>
      <hr>
    <% end %>

<br>
<% if user_signed_in? %>
  <%= link_to 'Add new blog post', new_article_path %>
<% end %>
